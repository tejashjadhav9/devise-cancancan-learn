<!DOCTYPE html>
<html>
  <head>
    <title>Devcan</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>

    <div class="container">
        <div class="col-md-12">
    <%= link_to'<button>home</button>'.html_safe, root_path %> |
    <% if current_user %>
      Welcome come <%= current_user.email %>
      <%= button_to'Exit', destroy_user_session_path, :method => :delete %> |
      <%= link_to'<button>Modify password</button>'.html_safe, edit_registration_path(:user) %>
    <% else %>
      <%= link_to'<button>register</button>'.html_safe, new_registration_path(:user) %> |
      <%= link_to'<button>login</button>'.html_safe, new_session_path(:user) %>
    <% end %>
  </body>
</html>
